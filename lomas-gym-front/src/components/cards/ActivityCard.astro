---
export interface IActivityCard {
    name: string
    description: string
    image: any
    image_alt: string
}

const { name, description, image, image_alt } = Astro.props as IActivityCard
---

<div class="flip-card-container">
    <div class="flip-card">
        <div class="card-front">
            <img src={image} alt={image_alt} class="w-full h-full" />
            <div
                class="bg-[#2A2550] w-full flex items-center justify-center py-3 px-[6.25rem]"
            >
                <h2 class="text-4xl text-white">{name}</h2>
            </div>
        </div>

        <div class="card-back">
            <div
                class="absolute w-full h-full bg-gray-200 grid place-content-center px-10 gap-y-6"
            >
                <p>
                    {description}
                </p>
                <button
                    class="border border-[#2A2550] px-4 py-2 hover:bg-[#2A2550] hover:text-white rounded-xl"
                    >Ver mas</button
                >
            </div>
        </div>
    </div>
</div>

<style>
    .flip-card-container {
        width: 310px;
        height: 400px;
        margin: 40px;

        perspective: 1000px;
    }
    .flip-card {
        width: inherit;
        height: inherit;

        position: relative;
        transform-style: preserve-3d;
        transition: 0.6s 0.1s;
    }
    .flip-card-container:hover .flip-card,
    .flip-card-container:focus-within .flip-card {
        transform: rotateY(180deg);
    }

    .card-front,
    .card-back {
        width: 100%;
        height: 100%;
        border-radius: 24px;
        position: absolute;
        top: 0;
        left: 0;
        overflow: hidden;

        backface-visibility: hidden;

        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card-front {
        transform: rotateY(0deg);
        z-index: 2;
        display: flex;
        flex-direction: column;
    }

    .card-back {
        transform: rotateY(180deg);
        z-index: 1;
        border: 1px solid #2a2550;
    }
</style>
